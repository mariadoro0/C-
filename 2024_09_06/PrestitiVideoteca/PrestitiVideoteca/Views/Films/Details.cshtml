@model PrestitiVideoteca.Models.Film

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Film</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Titolo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titolo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Supporto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Supporto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Regista)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Regista)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Attori)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Attori)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Genere)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genere)
        </dd>
    </dl>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Nome
                </th>
                <th>
                    Cognome
                </th>
                <th>
                    Data Prestito
                </th>
                <th>
                    Data Restituzione
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                var studenti = (List<Prestito>)@ViewBag.Studenti;
            }
            @foreach (var item in studenti)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MatricolaNavigation.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MatricolaNavigation.Cognome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataPrestito)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataRestituzione)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Codice">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
