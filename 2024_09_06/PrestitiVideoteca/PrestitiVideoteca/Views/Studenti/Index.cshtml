@model IEnumerable<PrestitiVideoteca.Models.Studente>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div>
    <a asp-action="ClassificaPrestitiStudenti">Visualizza classifica</a>
</div>
<p>
    <form>
        Ricerca per:<br />
        Nome: <input type="text" name="nome" value="@ViewBag.Nome"/>
        Cognome: <input type="text" name="cognome" value="@ViewBag.Cognome"/>
        <input type="submit" value="Cerca" />
    </form>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cognome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Classe)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cognome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Classe)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Matricola">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Matricola">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Matricola">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
