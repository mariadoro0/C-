@model PrestitiBiblio.Models.Prestito

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Prestito</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdLibro" />
            <input type="hidden" asp-for="Matricola" />
            <div class="form-group">
                <label asp-for="IdLibroNavigation" class="control-label"></label>
                <input asp-for="IdLibroNavigation.Titolo" class="form-control" readonly/>
                <span asp-validation-for="IdLibro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MatricolaNavigation" class="control-label"></label>
                <input asp-for="MatricolaNavigation.Nominativo" class="form-control" readonly/>
                <span asp-validation-for="Matricola" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataPrestito" class="control-label"></label>
                <input asp-for="DataPrestito" class="form-control" />
                <span asp-validation-for="DataPrestito" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataRestituzione" class="control-label"></label>
                <input asp-for="DataRestituzione" class="form-control" />
                <span asp-validation-for="DataRestituzione" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
