@model PrestitiVideoteca.Models.Prestito

@{
    ViewData["Title"] = "Restituzione";
}

<h1>Restituzione</h1>
@if (Model.DataScadenza < DateTime.Now)
{
    <h3 style="color:darkred">Prestito scaduto</h3>
}
<h3>Are you sure you want to return this?</h3>
<div>
    <h4>Prestito</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataPrestito)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataPrestito)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdFilmNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdFilmNavigation.Titolo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MatricolaNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MatricolaNavigation.Nominativo)
        </dd>
    </dl>
    
    <form asp-action="Restituzione">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Restituzione" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
