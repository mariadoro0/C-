@model IEnumerable<PalazzoMadama.Models.Opera>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<p>
    <form>
        Cerca per autore:
        <select name="autore">
            <option value="" selected> </option>
            @{
                var autori = ViewBag.Autori;
                foreach (var item in autori)
                {
                    if (ViewBag.Autore == item)
                    {
                        <option value="@item" selected>@item</option>
                    }
                    else
                    {
                        <option value="@item">@item</option>
                    }

                }
            }
        </select>
        Cerca per titolo:
        <input type="text" name="titolo" value="@ViewBag.Titolo" />
        <input type="submit" value="Cerca" />
    </form>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Inventario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmbitoCulturale)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Datazione)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TitoloSoggetto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Immagine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lsreferenceby)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdAutoreNavigation.Nominativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Inventario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmbitoCulturale)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Datazione)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TitoloSoggetto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Immagine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lsreferenceby)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdAutoreNavigation.Nominativo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
