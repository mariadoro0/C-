@model IEnumerable<Istat.Models.Provincia>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Denominazione)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sigla)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodiceCittaMetropolitana)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdRegioneNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SuperficieTot)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Denominazione)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sigla)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodiceCittaMetropolitana)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdRegioneNavigation.Id)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SuperficieTot)
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
